(library
 (name grading_jsoo)
 (wrapped false)
 (modes byte)
 (libraries js_of_ocaml
            js_of_ocaml-lwt
            js_of_ocaml.syntax
            ezjsonm
            ocplib-json-typed.browser
            learnocaml_repository
